@model ResultLocationDto
@{
    ViewData["Title"] = "Index";
    Layout =null;
}

<!DOCTYPE html>
<html lang="en">
@await Component.InvokeAsync("_HeadUILayout")
<body>

   @await Component.InvokeAsync("_NavbarUILayout")
    @await Component.InvokeAsync("_DefaultCoverUILayout")



    <section class="ftco-section ftco-no-pt bg-light">
        <div class="container">
            <div class="row no-gutters">
                <div class="col-md-12	featured-top">
                    <div class="row no-gutters">
                        <div class="col-md-4 d-flex align-items-center">
                            <form method="post" class="request-form ftco-animate bg-primary">
                                <h2>Araç Kirala</h2>
                                <div class="form-group">
                                    <label for="" class="label">Nereden Alacaksınız?</label>
                                    <select name="locationId" class="custom-select" asp-for="Id" asp-items="@ViewBag.v">
                                        <option value=>Seçiniz</option>
                                    </select>
                                </div>
                               
                                <div class="d-flex">
                                    <div class="form-group mr-2">
                                        <label for="" class="label">Kiralama Tarihi</label>
                                        <input type="text" class="form-control" name="book_pick_date" id="book_pick_date" placeholder="Tarih">
                                    </div>
                                    <div class="form-group ml-2">
                                        <label for="" class="label">İade Tarihi</label>
                                        <input type="text" class="form-control" name="book_off_date" id="book_off_date" placeholder="Tarih">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="" class="label">Kiralama Saati</label>
                                    <input type="text" class="form-control" name="time_pick" id="time_pick" placeholder="Saat">
                                </div>

                               
                                <div class="form-group">
                                    <button class="btn btn-secondary py-3 px-4">Uygun Araçları Listele</button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-8 d-flex align-items-center">
                            <div class="services-wrap rounded-right w-100">
                                <h3 class="heading-section mb-4">Araç Kiralamanın En Basit Yolu</h3>
                                <div class="row d-flex mb-4">
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-route"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">Almak İstedğin Konumu Seç</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-handshake"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">En İyi Teklifleri Gör</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-rent"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">İstediğin Aracı Kirala</h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <p><a asp-action="Index" asp-controller="CarPricing" class="btn btn-primary py-3 px-4">Size En Uygun Aracı Kiralayın</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>




    @await Component.InvokeAsync("_Last5CarsWithBrands")
    

    @await Component.InvokeAsync("_AboutUs")

    @await Component.InvokeAsync("_Service")
   


    @await Component.InvokeAsync("_Testimonial")
    @await Component.InvokeAsync("_GetLast3Blogs")



    @await Component.InvokeAsync("_FooterUILayout")



    @await Component.InvokeAsync("_LoaderUILayout")
    @await Component.InvokeAsync("_ScriptsUILayout")

</body>
</html>

