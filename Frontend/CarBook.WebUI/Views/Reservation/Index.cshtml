@model CreateReservationDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}
@ViewBag.v3
<div class="col-md-12 block-9 mb-md-5">
    <h3 class="alert alert-success">Araç Rezervason Formu</h3>
    <form  method="post" class="bg-light p-5 contact-form">
        <div class="form-group">
            <input type="hidden" class="form-control" asp-for="CarId" value="@ViewBag.v3" placeholder="Almak İstediğiniz Araba">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" asp-for="Name" placeholder="Adınız">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" asp-for="Surname" placeholder="Soyadınız">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" asp-for="Mail" placeholder="Mail Adresiniz">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" asp-for="Phone" placeholder="Telefon Numaranız">
        </div>
        <div class="form-group">
            <select  class="custom-select" asp-for="PickUpId" asp-items="@ViewBag.v">
                <option value=>Teslim Almak İstediğiniz Lokasyon</option>
            </select>
        </div>
        <div class="form-group">
            <select  class="custom-select" asp-for="DropOffId" asp-items="@ViewBag.v">
                <option value=>Teslim Etmek İstediğiniz Lokasyon</option>
            </select>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" asp-for="Age" placeholder="Yaşınız">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" asp-for="LicenseYear" placeholder="Ehliyet Yılınız">
        </div>

        <div class="form-group">
            <textarea cols="30" rows="7" asp-for="Description" class="form-control" placeholder="Varsa Eklemek İstedikleriniz"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Rezervasyonu Tamamla" class="btn btn-primary py-3 px-5">
        </div>
    </form>

</div>