@model List<ResultCarPricingWithModelDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section ftco-cart">
	<div class="container">
		<div class="row">
			<div class="col-md-12 ftco-animate">
				<div class="car-list">
					<table class="table">
						<thead class="thead-primary">
							<tr class="text-center">
								<th>&nbsp;</th>
								<th>&nbsp;</th>
								<th class="bg-primary heading">Günlük Kiralama Ücretleri</th>
								<th class="bg-dark heading">Haftalık Kiralama Ücretleri</th>
								<th class="bg-black heading">Aylık Kiralama Ücretleri</th>
							</tr>
						</thead>
						@foreach (var item in Model)
						{
							<tbody>
								<tr class="">
									<td class="car-image"><div class="img" style="background-image:url(@item.CoverImageUrl);"></div></td>
									<td class="product-name">
										<h3>@item.Brand</h3>
										<h4>@item.Model</h4>
										
									</td>

									<td class="price">
										<p class="btn-custom"><a href="#">Kirala</a></p>
										<div class="price-rate">
											<h3>
												<span class="num"> @item.DailyPrice<small class="currency">₺</small></span>
												<span class="per">/günlük</span>
											</h3>
											
										</div>
									</td>

									<td class="price">
										<p class="btn-custom"><a href="#">Kirala</a></p>
										<div class="price-rate">
											<h3>
												<span class="num"> @item.WeeklyPrice<small class="currency">₺</small></span>
												<span class="per">/haftalık</span>
											</h3>
										</div>
									</td>

									<td class="price">
										<p class="btn-custom"><a href="#">Kirala</a></p>
										<div class="price-rate">
											<h3>
												<span class="num">@item.MonthlyPrice<small class="currency">₺</small> </span>
												<span class="per">/aylık</span>
											</h3>
											
										</div>
									</td>
								</tr>
							</tbody>
						}
					</table>
				</div>
			</div>
		</div>
	</div>
</section>