
@{
    ViewData["Title"] = "BlogDetail";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section ftco-degree-bg">
    <div class="container">
        <div class="row">
            @await Component.InvokeAsync("_BlogDetailMain",new {id=ViewBag.id})
            <div class="col-md-4 sidebar ftco-animate">
                
                @await Component.InvokeAsync("_BlogDetailCategory")
                @await Component.InvokeAsync("_BlogDetailRecentBlogs")
               
            </div>

        </div>
    </div>
</section>

