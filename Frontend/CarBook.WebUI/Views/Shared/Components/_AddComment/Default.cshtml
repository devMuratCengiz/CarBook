
<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Yorum Yap</h3>
    <form asp-controller="Blog" asp-action="AddComment" class="p-5 bg-light">
        <div class="form-group">
            <label for="name">Ad Soyad *</label>
            <input type="text" name="Name" class="form-control" id="name">
        </div>
        <input type="hidden" name="BlogId" value="@ViewBag.id" class="form-control" id="name">
        <div class="form-group">
            <label for="message">Yorumunuz *</label>
            <textarea id="message" name="Content" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Yorum Yap" class="btn py-3 px-4 btn-primary">
        </div>

    </form>
</div>