@model List<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}

<div class="row">
    <div class="col-xl">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title">İletişim Mesajları</h1>

                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Adı</th>
                                <th>Mail</th>
                                <th>Konu</th>
                                <th>Mesaj</th>
                                <th>Tarih</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.Id</th>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td>@item.Subject</td>
                                    <td>@item.Message</td>
                                    <td>@item.SendDate.ToShortDateString()</td>
                                    <td><a asp-action="Delete" asp-controller="Contact" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-danger">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    
                </div>

            </div>
        </div>

    </div>
</div>