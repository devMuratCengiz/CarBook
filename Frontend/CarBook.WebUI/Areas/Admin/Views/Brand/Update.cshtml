@model UpdateBrandDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}
<div class="card">
    <div class="card-body">

        <h4 class="card-title">Marka Güncelle</h4>


        <form method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">



                <label for="exampleInputEmail1">Ad</label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Marka Adı">



            </div>


            <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
        </form>

    </div> <!-- end card-body-->
</div>
