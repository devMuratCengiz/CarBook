@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}

<div class="row">
    <div class="col-xl">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title">Referanslar</h1>

                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Adı</th>
                                <th>Ünvan</th>
                                <th>Yorum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.Id</th>
                                    <td><img src="@item.ImageUrl" style="width:50px;height:50px;margin-right:10px" />@item.Name</td>
                                    <td>@item.Title</td>
                                    <td>@item.Comment</td>
                                    <td><a asp-action="Update" asp-controller="Testimonial" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-info">Güncelle</a></td>
                                    <td><a asp-action="Delete" asp-controller="Testimonial" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-danger">Sil</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a asp-action="Create" asp-controller="Testimonial" asp-area="Admin" class="btn btn-success">Oluştur</a>
                </div>

            </div>
        </div>

    </div>
</div>

