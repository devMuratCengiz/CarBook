@model List<ResultCarWithBrandDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}

<div class="row">
    <div class="col-xl">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title">Araba Listesi</h1>
                
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Marka</th>
                                <th>Model</th>
                                <th>Vites</th>
                                <th>Km</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.id</th>
                                    <td>@item.brandName</td>
                                    <td>@item.model</td>
                                    <td>@item.transmission</td>
                                    <td>@item.km</td>
                                    <td><a asp-action="Update" asp-controller="Car" asp-area="Admin" asp-route-id="@item.id" class="btn btn-info">Güncelle</a></td>
                                    <td><a asp-action ="Delete" asp-controller="Car" asp-area="Admin" asp-route-id="@item.id" class="btn btn-danger">Sil</a></td>
                                    <td><a asp-action="Detail" asp-controller="Car" asp-area="Admin" asp-route-id="@item.id" class="btn btn-dark">Detaylar</a></td>
                                </tr>
                            }
                            
                        </tbody>
                    </table>
                    <a asp-action="Create" asp-controller="Car" asp-area="Admin" class="btn btn-success">Oluştur</a>
                </div>

            </div>
        </div>

    </div>
</div>