@model List<ResultCarFeatureDto>
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}

<div class="row">
    <div class="col-xl">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title">Araç Özellikleri</h1>

                <form method="post">
                    
                        @for(int i = 0; i < Model.Count; i++)
                        {
                        <div class="form-check">
                            <input type="hidden" asp-for="@Model[i].FeatureId" />    
                            <input type="hidden" asp-for="@Model[i].FeatureName" />    
                            <input type="checkbox" asp-for="@Model[i].Available" class="form-check-input" />
                            <label class="form-check-label" for="@Model[i].Available">@Model[i].FeatureName</label>
                        </div>
                        }
                        <button class="btn btn-success">Kaydet</button>
                   
                </form>

            </div>
        </div>

    </div>
</div>

