@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">


@await Component.InvokeAsync("_AdminHeader")

<body>

    <!-- Begin page -->
    <div id="layout-wrapper">


        <!-- ========== Left Sidebar Start ========== -->
        @await Component.InvokeAsync("_AdminSidebar")
        <!-- Left Sidebar End -->
        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="main-content">

            <div class="page-content">
                <div class="container-fluid">

                    <!-- start page title -->
                    @RenderBody()
                    <!-- end page title -->

                </div> <!-- container-fluid -->
            </div>
            <!-- End Page-content -->
            @await Component.InvokeAsync("_AdminFooter")

        </div>
        <!-- end main content-->

    </div>
    <!-- END layout-wrapper -->
    <!-- Overlay-->
    <div class="menu-overlay"></div>


    @await Component.InvokeAsync("_AdminScripts")

</body>

</html>