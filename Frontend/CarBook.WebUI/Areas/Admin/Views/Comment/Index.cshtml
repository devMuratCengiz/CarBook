@model List<ResultCommentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}

<div class="row">
    <div class="col-xl">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title">Yorumlar</h1>

                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Adı</th>
                                <th>Yorum</th>
                                <th>Oluşturulma Tarihi</th>
                                <th>Blog</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.Id</th>
                                    <td>@item.Name</td>
                                    <td>@item.Content</td>
                                    <td>@item.CreatedDate</td>
                                    <td>@item.BlogId</td>
                                    <td><a asp-action="Update" asp-controller="Comment" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-info">Güncelle</a></td>
                                    <td><a asp-action="Delete" asp-controller="Comment" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-danger">Sil</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a asp-action="Create" asp-controller="Comment" asp-area="Admin" class="btn btn-success">Oluştur</a>
                </div>

            </div>
        </div>

    </div>
</div>
