@model CreateBlogDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}

<div class="card">
    <div class="card-body">

        <h4 class="card-title">Blog Ekle</h4>


        <form method="post">
            <div class="form-group">



                <label for="exampleInputEmail1">Başlık</label>
                <input type="text" class="form-control" asp-for="Title" placeholder="Başlık">

                <label for="exampleInputEmail1">Yazar</label>
                <input type="text" class="form-control" asp-for="AuthorName" placeholder="Yazar">

                <label for="exampleInputEmail1">Kategori</label>
                <input type="text" class="form-control" asp-for="CategoryId" placeholder="Kategori">

                <label for="exampleInputEmail1">Resim Url</label>
                <input type="text" class="form-control" asp-for="CoverImageUrl" placeholder="Resim Url">

                <label for="exampleInputEmail1">Oluşturulma Tarihi</label>
                <input type="text" class="form-control" asp-for="CreatedDate" placeholder="Oluşturulma Tarihi">

                <label for="exampleInputEmail1">Açıklama</label>
                <input type="text" class="form-control" asp-for="Description" placeholder="Açıklama">



            </div>


            <button type="submit" class="btn btn-primary waves-effect waves-light">Ekle</button>
        </form>

    </div> <!-- end card-body-->
</div>