@model List<ResultBlogWithAuthorDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}
<div class="row">
    <div class="col-xl">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title">Banner</h1>

                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Yazar</th>
                                <th>Kategori</th>
                                <th>Resim Url</th>
                                <th>Oluşturulma Tarihi</th>
                                <th>Açıklama</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.Id</th>
                                    <td>@item.Title</td>
                                    <td>@item.AuthorName</td>
                                    <td>@item.CategoryId</td>
                                    <td>@item.CoverImageUrl</td>
                                    <td>@item.CreatedDate</td>
                                    <td>@item.Description</td>
                                    <td><a asp-action="Update" asp-controller="Blog" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-info">Güncelle</a></td>
                                    <td><a asp-action="Delete" asp-controller="Blog" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-danger">Sil</a></td>
                                    <td><a asp-action="CommentListByBlogId" asp-controller="Blog" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-dark">Yorumlar</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a asp-action="Create" asp-controller="Blog" asp-area="Admin" class="btn btn-success">Oluştur</a>
                </div>

            </div>
        </div>

    </div>
</div>