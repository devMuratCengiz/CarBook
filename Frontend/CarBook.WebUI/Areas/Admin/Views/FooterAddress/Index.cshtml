@model List<ResultFooterAddressDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}

<div class="row">
    <div class="col-xl">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title">Adres</h1>

                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Adres</th>
                                <th>Mail</th>
                                <th>Telefon</th>
                                <th>Açıklama</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.Id</th>
                                    <td>@item.Address</td>
                                    <td>@item.Email</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Description</td>
                                    <td><a asp-action="Update" asp-controller="FooterAddress" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-info">Güncelle</a></td>
                                    <td><a asp-action="Delete" asp-controller="FooterAddress" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-danger">Sil</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a asp-action="Create" asp-controller="FooterAddress" asp-area="Admin" class="btn btn-success">Oluştur</a>
                </div>

            </div>
        </div>

    </div>
</div>

