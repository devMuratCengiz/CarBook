@model CreateBannerDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}

<div class="card">
    <div class="card-body">

        <h4 class="card-title">Banner Ekle</h4>


        <form method="post">
            <div class="form-group">



                <label for="exampleInputEmail1">Başlık</label>
                <input type="text" class="form-control" asp-for="Title" placeholder="Başlık">

                <label for="exampleInputEmail1">Açıklama</label>
                <input type="text" class="form-control" asp-for="Description" placeholder="Açıklama">

                <label for="exampleInputEmail1">Video Url</label>
                <input type="text" class="form-control" asp-for="VideoUrl" placeholder="Video Url">

                <label for="exampleInputEmail1">Video Açıklama</label>
                <input type="text" class="form-control" asp-for="VideoDescription" placeholder="Video Açıklama">



            </div>


            <button type="submit" class="btn btn-primary waves-effect waves-light">Ekle</button>
        </form>

    </div> <!-- end card-body-->
</div>



