@model List<ResultBannerDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}

<div class="row">
    <div class="col-xl">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title">Banner</h1>

                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Açıklama</th>
                                <th>VideoUrl</th>
                                <th>Video Açıklama</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.Id</th>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>@item.VideoUrl</td>
                                    <td>@item.VideoDescription</td>
                                    <td><a asp-action="Update" asp-controller="Banner" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-info">Güncelle</a></td>
                                    <td><a asp-action="Delete" asp-controller="Banner" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-danger">Sil</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a asp-action="Create" asp-controller="Banner" asp-area="Admin" class="btn btn-success">Oluştur</a>
                </div>

            </div>
        </div>

    </div>
</div>
